---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteWarning from '../components/SiteWarning.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Skills from '../components/Skills.astro';
import Experience from '../components/Experience.astro';
import Portfolio from '../components/Portfolio.astro';
import Education from '../components/Education.astro';
import Blog from '../components/Blog.astro';
import Contact from '../components/Contact.astro';
import BackToTop from '../components/BackToTop.astro';

const title = "Luis Bonilla - Software Engineer | Technical Lead";
const description = "Luis Bonilla - Software Engineer & Technical Lead with 15+ years experience. Expert in React, Node.js, Python, AWS, and digital transformation.";
---

<BaseLayout 
  title={title} 
  description={description}
  includePersonSchema={true}
>
  <SiteWarning />
  <Hero />
  <About />
  <Skills />
  <Experience />
  <Portfolio />
  <Education />
  <Blog />
  <Contact />
  <BackToTop />
</BaseLayout>
